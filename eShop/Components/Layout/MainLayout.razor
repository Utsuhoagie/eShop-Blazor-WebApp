@inherits LayoutComponentBase

@inject NavigationManager Navigation

@code {
	bool IsDrawerOpen = true;
	void ToggleDrawer() => IsDrawerOpen = !IsDrawerOpen;
}

<MudThemeProvider IsDarkMode />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar Elevation=0>
		<MudIconButton
			Icon=@Icons.Material.Filled.Menu Color=Color.Inherit Edge=Edge.Start
			OnClick=@ToggleDrawer />
		<MudText Typo=Typo.h5>@Navigation.ToBaseRelativePath(Navigation.Uri)</MudText>
	</MudAppBar>

	<MudDrawer @bind-Open=@IsDrawerOpen >
		<NavMenu/>
	</MudDrawer>

	<MudMainContent>
		<MudContainer MaxWidth=@MaxWidth.Large >
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>